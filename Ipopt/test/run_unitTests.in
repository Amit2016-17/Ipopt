srcdir="@srcdir@"

retval=0

echo " "
echo Running unitTests...
echo " "

# AMPL Solver executable
echo Testing AMPL Solver Executable...
if test -x ../src/Apps/AmplSolver/ipopt ; then
  if test -f mytoy.nl; then
    remove_mytoy=no
  else
    cp "$srcdir/mytoy.nl" .
    remove_mytoy=yes
  fi
  ../src/Apps/AmplSolver/ipopt mytoy.nl >tmpfile 2>&1
  grep "EXIT: Optimal Solution Found." tmpfile 1>/dev/null 2>&1
  if test $? = 0; then
    echo "    Test passed!"
  else
    retval=-1
    echo " "
    echo " ---- 8< ---- Start of test program output ---- 8< ----"
    cat tmpfile
    echo " ---- 8< ----  End of test program output  ---- 8< ----"
    echo " "
    echo "    ******** Test FAILED! ********"
    echo "Output of the test program is above."
  fi
  rm -rf tmpfile  mytoy.sol
  if test "$remove_mytoy" = "yes"; then
    rm -rf mytoy.nl
  fi
else
  echo "    no AMPL solver executable found, skipping test..."
fi

# C++ Example
echo Testing C++ Example...
./hs071_cpp >tmpfile 2>&1
grep "EXIT: Optimal Solution Found." tmpfile 1>/dev/null 2>&1
if test $? = 0; then
  echo "    Test passed!"
else
  retval=-1
  echo " "
  echo " ---- 8< ---- Start of test program output ---- 8< ----"
  cat tmpfile
  echo " ---- 8< ----  End of test program output  ---- 8< ----"
  echo " "
  echo "    ******** Test FAILED! ********"
  echo "Output of the test program is above."
fi
rm -rf tmpfile

# C Example
echo Testing C Example...
./hs071_c >tmpfile 2>&1
grep "EXIT: Optimal Solution Found." tmpfile 1>/dev/null 2>&1
if test $? = 0; then
  echo "    Test passed!"
else
  retval=-1
  echo " "
  echo " ---- 8< ---- Start of test program output ---- 8< ----"
  cat tmpfile
  echo " ---- 8< ----  End of test program output  ---- 8< ----"
  echo " "
  echo "    ******** Test FAILED! ********"
  echo "Output of the test program is above."
fi
rm -rf tmpfile

# Fortran Example
if test -e ./hs071_f ; then
echo Testing Fortran Example...
./hs071_f >tmpfile 2>&1
grep "EXIT: Optimal Solution Found." tmpfile 1>/dev/null 2>&1
if test $? = 0; then
  echo "    Test passed!"
else
  retval=-1
  echo " "
  echo " ---- 8< ---- Start of test program output ---- 8< ----"
  cat tmpfile
  echo " ---- 8< ----  End of test program output  ---- 8< ----"
  echo " "
  echo "    ******** Test FAILED! ********"
  echo "Output of the test program is above."
fi
rm -rf tmpfile
else
echo "Skip testing Fortran Example (hs071_f not available)"
fi

@BUILD_JAVA_TRUE@test_java=true
@BUILD_JAVA_FALSE@test_java=false
if $test_java ; then
echo Testing Java Example...
java -Djava.library.path=../src/Interfaces/.libs:../src/Interfaces -cp ../src/Interfaces/org.coinor.ipopt.jar:. org.coinor.examples.HS071 >tmpfile 2>&1
grep "EXIT: Optimal Solution Found." tmpfile 1>/dev/null 2>&1
if test $? = 0; then
  echo "    Test passed!"
else
  retval=-1
  echo " "
  echo " ---- 8< ---- Start of test program output ---- 8< ----"
  cat tmpfile
  echo " ---- 8< ----  End of test program output  ---- 8< ----"
  echo " "
  echo "    ******** Test FAILED! ********"
  echo "Output of the test program is above."
fi
rm -rf tmpfile
else
echo "Skip testing Java Example (Java interface not build)"
fi

# clean up
rm -rf tmpfile debug.out ipopt.out IPOPT.OUT

exit $retval
