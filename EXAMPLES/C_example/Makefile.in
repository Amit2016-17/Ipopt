# Directory to the sources for the (example) problem definition files
SRCDIR = @srcdir@
VPATH = @srcdir@

# Compiler options
CC = @CC@
CFLAGS = @CFLAGS@

# Directory with libipopt.a
prefix = @prefix@
exec_prefix = @exec_prefix@
IPOPTLIBDIR = @libdir@

# Directory with Ipopt_Interface.h
IPOPTINCDIR = @includedir@

# Libraries necessary to link with IPOPT
# LIBS = $(IPOPTLIBDIR)/libipopt.a @IPADDLIBS@
LIBS = @ipoptlib@ @IPADDLIBS@

# Libraries necessary to link Fortran code by a C compiler
FLIBS = @FLIBS@

# CHANGEME: This should be the name of your executable
EXE = example@EXEEXT@

# CHANGEME: Here is the name of all object files corresponding to the source
#           code that you wrote in order to define the problem statement
OBJS = example.@OBJEXT@

# The following is necessary under cygwin, if native compilers are used
CYGPATH_W = @CYGPATH_W@

all: $(EXE)

.SUFFIXES: .c .o .obj

$(EXE): $(OBJS)
	bla=;\
	for file in $(OBJS); do bla="$$bla `$(CYGPATH_W) $$file`"; done; \
	$(CC) $(CFLAGS) -o $@ $$bla $(LIBS) $(FLIBS)

clean:
	rm -rf $(EXE) $(OBJS)

.c.o:
	$(CC) $(CFLAGS) -I$(IPOPTINCDIR) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<

.c.obj:
	$(CC) $(CFLAGS) -I\"`cygpath -w $(IPOPTINCDIR)`\" -c -o $@ `if test -f '$<'; then $(CYGPATH_W) '$<'; else $(CYGPATH_W) '$(SRCDIR)/$<'; fi`
